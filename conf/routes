# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index()
POST        /login               controllers.Login.login()

GET         /sign-in             controllers.Profile.signIn(callback: String)

GET         /data                           controllers.Profile.data(callback: String)

GET         /vehicles/:postcode             controllers.Services.cars(postcode: String)
GET         /vehicles/insurance/:reg        controllers.Services.motorQuotes(reg: String)
GET         /homes/:postcode                controllers.Services.homes(postcode: String)
GET         /homes/insurance/:postcode      controllers.Services.homeQuotes(postcode: String)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

# Introduction page
GET         /introduction        controllers.Application.introduction()
